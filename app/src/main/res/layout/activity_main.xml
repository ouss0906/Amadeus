<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imageView_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg1" />

    <ImageView
        android:id="@+id/imageView_kurisu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/kurisu_angry1_labcoat_sg0"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView_logo_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/amadeus_icon_smaller"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView_subtitles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@drawable/subtitle_frame_big" />

    <ImageView
        android:id="@+id/imageView_voice_activator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/voice_icon_app"
        android:layout_alignTop="@+id/textView_subtitles"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_icon"
        android:layout_marginTop="14dp"
        android:layout_alignTop="@+id/imageview_full_screen"
        android:layout_alignRight="@+id/imageView_logo_small"
        android:layout_alignEnd="@+id/imageView_logo_small" />

    <ImageView
        android:id="@+id/imageview_full_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_subtitles"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/imageView_subtitles"
        android:layout_marginTop="11dp"
        android:fontFamily="Droid"
        android:layout_gravity="start"
        android:shadowColor="#000"
        android:shadowRadius="2"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="gravity"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#FFF"
        android:textSize="16.0sp"
        android:typeface="monospace" />

</RelativeLayout>